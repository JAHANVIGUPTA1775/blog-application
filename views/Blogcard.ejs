<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
      }

      ul {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
        padding: 20px;
        margin: 20px;
        list-style-type: none;
      }

      ul li {
        background-color: #fff;
        padding: 10px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }

      ul li:hover {
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
      }
      ul li h2 {
        margin-top: 0;
        font-size: 20px;
        color: #333;
        /* min-height: 50px;  */
        overflow: hidden;
      }
      h1 {
        text-align: center;
      }

      p {
        margin-top: auto;
        font-size: 16px;
        line-height: 1.6;
        color: #555;
        
      }
      .create-blog-button, .search-button {
        /* display: inline-block; */
        padding: 10px 20px;
        margin: 20px;
        font-size: 16px;
        color: #fff;
        background-color: #007bff;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        text-align: center;
      }
      .create-blog-button:hover {
        color: white;
        background-color: #0056b3; /* Darker shade for hover */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Shadow for depth */
      }
      .search-button{
        padding: 7px 15px;
        margin: 10px;
        font-size: 16px;
      }
      .delete-button {
        display: inline-block;
        padding: 8px 18px;
        margin: 20px;
        font-size: 16px;
        color: #fff;
        background-color: #ff2600;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        text-align: center;
      }

      img {
        width: 100%;
        height: auto;
        max-width: 100%;
        border-radius: 10px;
        object-fit: cover;
        margin-bottom: 10px;
        max-height: 180px;
      }
    
      .view {
        text-decoration: none;
        display: block;
      }
      .pagination{
        justify-content: end;
        margin: 10px;
      }

      .pagination a {
        margin: 0 5px;
        padding: 10px 15px;
        text-decoration: none;
        color: #007bff;
        background-color: #f1f1f1;
        border-radius: 5px;

      }

      .pagination a.active {
        font-weight: bold;
        background-color: #007bff;
        color: #fff;
      }

      .pagination a:hover {
        background-color: #0056b3;
        color: #fff;
      }
      .blogs-header{
        display: flex;
        justify-content: end;
      }
    </style>
    <title>Document</title>
  </head>
  <body>
   
    <%- include('./partials/header')%>
   
      
      <% if(user){ %>

        <h1>Welcome, <%= user.name %>!</h1>
      <% } %>
      <div class="blogs-header">
        <form id="se1">
          <input type="search" placeholder="Search Blogs" name="q" id="qu">
          <button type="submit" class="search-button" id="but">Search</button>
        </form>
      </div>

    <ul>
      <% blogs.forEach(function(blog) { %>
      <li>
        <a href="/blogdata/<%= blog.id %>" class="view">
          <img src="<%= blog.image %>" alt="<%= blog.title %>" />
          <h2>
            <%= blog.title.length>30 ? blog.title.substr(0,30)+'...': blog.title %>
          </h2>
          <p><%= blog.category %></p>
        </a>
      </li>
      
      <% }) %>
    </ul>
    <div class="pagination">
      <% if(currentPage > 1){%>
      <a href="/blogs?page=<%= currentPage -1%>">Previous</a>
      <%}%> <% for(let i=1;i<=totalPages;i++){ %>
      <a
        href="/blogs?page=<%= i %>"
        class="<%= i === currentPage ? 'active' : '' %>"
      >
        <%= i %>
      </a>
      <% }%> <%if(currentPage < totalPages){%>
      <a href="/blogs?page=<%= currentPage +1%>">Next</a>
      <%}%>
    </div>

    <%-include('./partials/footer')%>
  </body>

