<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog Card</title>
  
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }
    
    ul {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
        padding: 20px;
        margin: 20px;
        list-style-type: none;
      }
    
    ul li {
      background-color: #fff;
      padding: 10px;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      
    }
    
    
    ul li:hover {
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }
    
    /* Title styling */
    ul li h2 {
        margin-top: 0;
        font-size: 20px;
        color: #333;
        /* min-height: 50px;  */
        overflow: hidden;
        margin-bottom: 0;
      }
      h1 {
        text-align: center;
      }

      p {
        margin-top: auto;
        font-size: 16px;
        line-height: 1.6;
        color: #555;
        
      }
    .create-blog-button {
      display: inline-block;
      padding: 10px 20px;
      margin: 20px;
      font-size: 16px;
      color: #fff;
      background-color: #007bff;
      border: none;
      border-radius: 5px;
      text-decoration: none;
      text-align: center;
      
    }
    .delete-button{
      display: inline-block;
      padding: 10px 20px;
      margin: 20px;
      font-size: 16px;
      color: #fff;
      background-color: #ff2600;
      border: none;
      border-radius: 5px;
      text-decoration: none;
      text-align: center;
    }
    
    img {
        width: 100%;
        height: auto;
        max-width: 100%;
        border-radius: 10px;
        object-fit: cover;
        margin-bottom: 10px;
        max-height: 180px;
      }
    .container{
      margin: 0;
      padding: 0;
      
    }
    .view{
      text-decoration: none;
    }
        </style>
</head>
<body>
  <%- include('./partials/header')%>
  <ul>
    <% blogs.forEach(function(blog) { %>
      <li>
        <a href="/blogdata/<%= blog.id %>" class="view">
        <img src="<%= blog.image %>" alt="<%= blog.title %>">
        <h2> <%= blog.title.length>35 ? blog.title.substr(0,35)+'...': blog.title %></h2>
        <p><%= blog.category %></p>
       
        </a>
      </li>
    <% }) %>
  </ul>
  
  <%- include('./partials/footer')%>
</body>
</html>
